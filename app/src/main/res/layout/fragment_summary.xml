<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_md"
    tools:context=".ui.presentation.summary.SummaryFragment">

    <TextView
        android:id="@+id/topicText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintBottom_toTopOf="@id/cardSummary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSummary"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_lg"
        app:cardCornerRadius="@dimen/radius_md"
        app:contentPadding="@dimen/padding_md"
        app:layout_constraintBottom_toTopOf="@id/textStrengths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="@dimen/height_max_lg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topicText">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/summaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:lineSpacingExtra="2dp"
                android:scrollbars="vertical" />
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textStrengths"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/padding_md"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_height="wrap_content"
        android:text="@string/strengths"
        android:textColor="@color/strength_text"
        app:layout_constraintBottom_toTopOf="@id/strengthsViewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardSummary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/strengthsViewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/textWeaknesses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textStrengths" />

    <TextView
        android:id="@+id/textWeaknesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_md"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:text="@string/weaknesses"
        android:textColor="@color/weakness_text"
        app:layout_constraintBottom_toTopOf="@id/weaknessesViewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/strengthsViewPager" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/weaknessesViewPager"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textWeaknesses" />
</androidx.constraintlayout.widget.ConstraintLayout>